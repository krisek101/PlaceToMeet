<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/right_container"
    android:layout_width="250dp"
    android:layout_height="match_parent"
    android:layout_gravity="start"
    android:background="@color/colorPlaces"
    android:orientation="vertical">

    <ListView
        android:id="@+id/right_slider_persons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="false"
        android:layout_alignParentStart="false"
        android:layout_alignParentTop="true" />

    <View
        android:id="@+id/line2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/right_slider_persons"
        android:background="#d1d1d1" />

    <RelativeLayout
        android:id="@+id/right_slider_add_new_person_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line2"
        android:background="?attr/selectableItemBackground"
        android:orientation="horizontal"
        android:clickable="true">

        <RelativeLayout
            android:id="@+id/right_slider_item_avatar_container"
            android:layout_width="50dp"
            android:layout_height="50dp">

            <ImageView
                android:id="@+id/right_slider_item_avatar"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:paddingBottom="1dp"
                android:paddingTop="1dp"
                android:src="@drawable/ic_add_white_24dp" />

            <TextView
                android:id="@+id/right_slider_item_distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:textColor="#000"
                android:textSize="12sp"
                android:visibility="gone" />
        </RelativeLayout>

        <View
            android:id="@+id/line"
            android:layout_width="1dp"
            android:layout_height="50dp"
            android:layout_toEndOf="@+id/right_slider_item_avatar_container"
            android:background="#d1d1d1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_toEndOf="@+id/line"
            android:orientation="vertical"
            android:weightSum="5">

            <TextView
                android:id="@+id/right_slider_item_name"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingStart="10dp"
                android:text="Dodaj nową osobę"
                android:textAppearance="@android:style/TextAppearance.Medium" />

        </LinearLayout>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/right_slider_add_new_person_container"
        android:background="#FFD1D1D1" />

    <RelativeLayout
        android:id="@+id/right_slider_footer"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="false"
        android:layout_alignParentStart="false"
        android:background="@color/colorPlaces"
        android:clickable="true">

        <TextView
            android:id="@+id/show_fav"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:gravity="center"
            android:text="LISTA ULUBIONYCH OSÓB" />

    </RelativeLayout>

</RelativeLayout>