<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:orientation="horizontal"
    android:weightSum="1">

    <AutoCompleteTextView
        android:id="@+id/action_bar_address_field"
        android:layout_width="230dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:hint="@string/search_field_hint"
        android:maxLines="2"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF" />

    <ImageButton
        android:id="@+id/action_bar_add_btn"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_centerVertical="true"
        android:layout_marginStart="10dp"
        android:background="@drawable/plus"
        android:contentDescription="@string/action_bar_add_btn"
        android:layout_toEndOf="@id/action_bar_address_field" />

</RelativeLayout>