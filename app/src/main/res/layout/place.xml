<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/place_element"
    android:layout_width="118dp"
    android:layout_height="match_parent"
    android:background="@color/colorPlaces">

    <ImageView
        android:id="@+id/place_image"
        android:layout_width="58dp"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"></ImageView>

    <TextView
        android:id="@+id/place_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/place_image"
        android:layout_marginTop="10dp"
        android:text="@+id/label"
        android:textAlignment="center"
        android:textColor="@color/colorPlacesText"
        android:textSize="15sp"></TextView>

</RelativeLayout>